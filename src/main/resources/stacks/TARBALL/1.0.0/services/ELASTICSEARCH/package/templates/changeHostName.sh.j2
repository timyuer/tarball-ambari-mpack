#!/bin/bash
elastic_head_home={{elastic_head_home}}
# modify elasticsearch-head port
sed -i "s/port:.*/port: {{elasticsearch_head_port}},/g" $elastic_head_home/Gruntfile.js
# modify elasticsearch-head web ui ip:port
sed -i "s/http:\/\/.*/http:\/\/{{elasticsearch_server_host}}:{{elasticsearch_port}}\";/g" $elastic_head_home/_site/app.js